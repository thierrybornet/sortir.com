{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="{{ asset('img/img1.webp') }}"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">


                                <div class="d-flex align-items-center mb-3 pb-1">

                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <a href="{{ path('app_login') }}"><img src="{{ asset('img/Logo.svg') }} "width="200" alt="sortir.com"></a>
                                    <span class="h2 fw-bold mb-0">Inscription</span>
                                </div>



    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.pseudo,{
            attr:{
                class:'form-control '
            },row_attr:{
                class:'form-group'
            }
        }) }}


                                {{ form_row(registrationForm.prenom,{
        attr:{
            class:'form-control'
        },row_attr:{
            class:'form-group'
        }
    }) }}

    {{ form_row(registrationForm.nom,{
        attr:{
            class:'form-control'
        },row_attr:{
            class:'form-group'
        }
    }) }}
    {{ form_row(registrationForm.telephone,{
        attr:{
            class:'form-control'
        },row_attr:{
            class:'form-group'
        }
    }) }}
    {{ form_row(registrationForm.email,{
        attr:{
            class:'form-control'
        },row_attr:{
            class:'form-group'
        }
    }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',
            attr:{
                class:'form-control'
            },row_attr:{
                class:'form-group'
            }
        }) }}

    {{ form_row(registrationForm.administrateur,{
        attr:{
            class:'form-check-input'
        },row_attr:{
            class:'form-check'
        }
    }) }}

    {{ form_row(registrationForm.actif,{
        attr:{
            class:'form-check-input'
        },row_attr:{
            class:'form-check'
        }
    }) }}

    {{ form_row(registrationForm.site,{
        attr:{
            class:'form-group'
        },row_attr:{
            class:'form-check'
        }
    }) }}


        <button type="submit" class="btn btn-dark">Enregistrer</button>
    {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block footer %} {{ parent () }} {%  endblock %}
