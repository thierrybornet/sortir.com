            {%  endfor %}
        {% endif %}
        <tr>
            <th scope="row"></th>

            {{ form_start(siteForm) }}
            <td>{{ form_row(siteForm.nom) }}</td>
            <td><button class="btn btn-secondary">Ajouter</button></td>
        </tr>
        {{ form_end(siteForm) }}


        </tbody>
    </table>


{% endblock %}
